#ifndef TIMER_H_
#define TIMER_H_

#include "std_types.h"
/*******************************************************************************
 *                         Types Declaration                                   *
 *******************************************************************************/
typedef enum {

	TIMER0,TIMER1

}Timer_ID_Type;

typedef enum {

	NORMAL,COMPARE_MATCH

} Timer_ModeType;

typedef uint32 Timer_ClockType;

typedef struct{
	uint16 timer_InitialValue;
	uint16 timer_compare_MatchValue;
	Timer_ID_Type timer_ID;
	Timer_ClockType timer_clock;
    Timer_ModeType timer_mode;

}Timer_ConfigType;

#endif /* TIMER_H_ */
