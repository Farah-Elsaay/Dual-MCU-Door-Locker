#include"buzzer.h"
#include"dc_motor.h"
#include"external_eeprom.h"
#include"pir.h"
#include"timer.h"
#include"twi.h"
#include"uart.h"
#include"pwm.h"
#include <util/delay.h> /* For the delay functions */
#define MATCH 0x11
#define MISMATCH 0x22
#define DOOR 0x01
#define CHANGEPASS 0x02
#define MOTION 0x03
#define NOMOTION 0x04
#define WARNING 0x05

uint8 password[7]; uint8 j;

void firstpassword(void)
{
    UART_receiveString(password);
	for(j=0;j<5;j++)
	{
		EEPROM_writeByte(0x0311+j,password[j]);
		_delay_ms(10);
	}
}
/////////////////////////////////////////////////////
void timer2newtick(void)
{
	tick++;
}
/////////////////////////////////////////////////////////
void opendoorcontrol(void)
{


	         	 	 tick=0;
					 DcMotor_Rotate(clockwise,100);
					 while(tick<=100){};



	         if(PIR_getState()==1)
					 {
						 DcMotor_Rotate(stop,100);
						 UART_sendByte(MOTION);
					 }
	         else
	         	 {
	        	     UART_sendByte(NOMOTION);
	        	     tick=0;
					 DcMotor_Rotate(anticlockwise,100);
					 while(tick<=100){};

	         	 }

}
//////////////////////////////////////////////////////////////////
/*
